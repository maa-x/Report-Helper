{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Test window",
            "request": "launch",
            "mainClass": "com.pentest.reporthelper.MainTestWindow",
            "projectName": "reporterr"
        },
        {
            "type": "java",
            "name": "Test window with JMX",
            "request": "launch",
            "mainClass": "com.pentest.reporthelper.MainTestWindow",
            "vmArgs": "-Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.port=5555 -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false",
            "projectName": "reporterr"
        },
        {
            "type": "java",
            "name": "Test window with Flight Recorder",
            "request": "launch",
            "mainClass": "com.pentest.reporthelper.MainTestWindow",
            "vmArgs": "-XX:+FlightRecorder -XX:StartFlightRecording=filename=recording.jfr,duration=60s,settings=profile",
            "projectName": "reporterr"
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "BurpExtension",
            "request": "attach",
            "hostName": "localhost",
            "port": 5555
        }
    ]
}